{
  "name": "OmniCore-Genesis Kingdom Technology",
  "image": "mcr.microsoft.com/devcontainers/rust:1-1-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {"version": "18"},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        "rust-analyzer.cargo.features": "all",
        "rust-analyzer.check.command": "clippy",
        "editor.formatOnSave": true,
        "editor.rulers": [80, 100],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "workbench.colorTheme": "Default Light+",
        "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
        "editor.fontLigatures": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "ms-vscode.vscode-json",
        "yzhang.markdown-all-in-one",
        "shd101wyy.markdown-preview-enhanced",
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-docker",
        "github.vscode-pull-request-github",
        "eamodio.gitlens",
        "gruntfuggly.todo-tree",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },

  "containerEnv": {
    "KINGDOM_MODE": "development",
    "SPIRITUAL_VALIDATION": "true",
    "HONOR_SABBATH": "true",
    "RUST_LOG": "debug"
  },

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  "workspaceFolder": "/workspace",

  "postCreateCommand": {
    "kingdom-setup": [
      "bash",
      "-c",
      "echo 'üèóÔ∏è Setting up Kingdom development environment...' && echo '\"In the beginning, God created the heavens and the earth.\" - Genesis 1:1' && rustup update && cargo install cargo-audit cargo-watch && make install-dev && echo '‚úÖ Kingdom development environment ready!'"
    ]
  },

  "postStartCommand": {
    "kingdom-greeting": [
      "bash", 
      "-c", 
      "echo '‚ú® Welcome to OmniCore-Genesis Kingdom Technology!' && echo 'üôè May your code serve God\\'s Kingdom and bring glory to His name.' && echo 'CreativeWorkzStudio LLC - Kingdom Technology for the Last Days'"
    ]
  },

  "remoteUser": "vscode",

  "forwardPorts": [8080, 8081, 8082, 3000, 9090],

  "portsAttributes": {
    "8080": {
      "label": "FaithNet API",
      "protocol": "http"
    },
    "8081": {
      "label": "Nova Dawn",
      "protocol": "http" 
    },
    "8082": {
      "label": "NovaOps",
      "protocol": "http"
    },
    "3000": {
      "label": "Monitoring",
      "protocol": "http"
    },
    "9090": {
      "label": "Covenant Protocol",
      "protocol": "http"
    }
  },

  "waitFor": "postCreateCommand",

  "updateContentCommand": "cargo update",

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },

  "otherPortsAttributes": {
    "onAutoForward": "notify"
  }
} 